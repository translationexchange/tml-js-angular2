{
  "name": "tml-angular2",
  "version": "0.0.1",
  "description": "This adds angular2 directives that allow you to perform seamless and advanced translations using TML from TranslationExchange.",
  "main": "./dist/tml-angular2.js",
  "typings": "tml-angular2.ts",
  "scripts": {
    "build": "rimraf dist && webpack --progress --profile --bail",
    "postinstall": "npm run typings",
    "typings": "typings install",
    "start": "webpack-dev-server --inline --progress --port 8843"
  },
  "author": {
    "name": "Eli Rapoport",
    "email": "eli@translationexchange.com"
  },
  "license": "MIT",
  "keywords": [
    "angular",
    "internationalization",
    "translation",
    "localization",
    "translate",
    "localize",
    "i18n",
    "t9n",
    "tr8n",
    "l10n",
    "tml"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/translationexchange/tml-angular2.git"
  },
  "bugs": {
    "url": "https://github.com/translationexchange/tml-angular2/issues"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^2.2.4",
    "typescript": "^2.0.2",
    "tml-js": "~0.4.22",
    "tml-js-browser": "~0.4.31",
    "rimraf": "^2.5.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.23",
    "typings": "^1.3.2"
  }
}
